<div class="container-fluid">
    <div class="row px-3">
        <div class="col-md-6 col-lg-4 p-3">
            <ElliciumCard>
                <ElliciumText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">TextArea</ElliciumText>
                <ElliciumTextArea Change=@(args => OnChange(args, "TextArea")) class="w-100" aria-label="TextArea" />
            </ElliciumCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <ElliciumCard>
                <ElliciumText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">TextArea with placeholder</ElliciumText>
                <ElliciumTextArea Placeholder="Enter here..." Change=@(args => OnChange(args, "TextArea with placeholder")) class="w-100" aria-label="TextArea with placeholder" />
            </ElliciumCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <ElliciumCard>
                <ElliciumText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">TextArea with 5 maximum characters</ElliciumText>
                <ElliciumTextArea MaxLength="5" Change=@(args => OnChange(args, "TextArea with 5 maximum characters")) class="w-100" aria-label="TextArea with 5 maximum characters" />
            </ElliciumCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <ElliciumCard Style="overflow: scroll">
                <ElliciumText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">TextArea with 3 rows and 30 columns</ElliciumText>
                <ElliciumTextArea @bind-Value=@value Cols="30" Rows="3" Change=@(args => OnChange(args, "TextArea with 3 rows and 30 columns")) aria-label="TextArea with 3 rows and 30 columns" />
            </ElliciumCard>
        </div>
        <div class="col-md-6 col-lg-4 p-3">
            <ElliciumCard Style="overflow: scroll">
                <ElliciumText TextStyle="TextStyle.Subtitle2" TagName="TagName.H3">Disabled TextArea with 3 rows and 30 columns</ElliciumText>
                <ElliciumTextArea Disabled="true" @bind-Value=@value Cols="30" Rows="3" aria-label="Disabled TextArea with 3 rows and 30 columns" />
            </ElliciumCard>
        </div>
    </div>
</div>

<EventConsole @ref=@console />

@code {
    string value;

    EventConsole console;

    void OnChange(string value, string name)
    {
        console.Log($"{name} value changed to {value}");
    }
}