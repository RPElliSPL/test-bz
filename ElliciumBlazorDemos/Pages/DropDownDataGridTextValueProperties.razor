@using ElliciumBlazorDemos.Models.Northwind

@inherits DbContextPage

<div class="rz-p-12 rz-text-align-center">
    <ElliciumLabel Text="Select Value" Component="DropDownDataGridTextValueProperties" Style="margin-right: 8px; vertical-align: middle;" />
    <ElliciumDropDownDataGrid @bind-Value=@value Data=@customers TextProperty="CompanyName" ValueProperty="CustomerID" Name="DropDownDataGridTextValueProperties" />
</div>

@code {
    string value = "AROUT";
    IEnumerable<Customer> customers;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        customers = dbContext.Customers;
    }
}