@inject NotificationService NotificationService

<ElliciumText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3">Icon</ElliciumText>
<ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <ElliciumButton Click=@(args => OnClick("Large icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" />
    <ElliciumButton Click=@(args => OnClick("Medium icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
    <ElliciumButton Click=@(args => OnClick("Small icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Small" />
    <ElliciumButton Click=@(args => OnClick("Extra Small icon button")) Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.ExtraSmall" />
</ElliciumStack>

<ElliciumText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3" class="rz-mt-4">Text</ElliciumText>
<ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <ElliciumButton Click=@(args => OnClick("Large Button")) Text="Create" Size="ButtonSize.Large" />
    <ElliciumButton Click=@(args => OnClick("Medium Button")) Text="Create" Size="ButtonSize.Medium" />
    <ElliciumButton Click=@(args => OnClick("Small Button")) Text="Create" Size="ButtonSize.Small" />
    <ElliciumButton Click=@(args => OnClick("Extra Small Button")) Text="Create" Size="ButtonSize.ExtraSmall" />
</ElliciumStack>

<ElliciumText TextStyle="TextStyle.Subtitle1" TagName="TagName.H3" class="rz-mt-4">Icon and Text</ElliciumText>
<ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem" Wrap="FlexWrap.Wrap">
    <ElliciumButton Click=@(args => OnClick("Large button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Large" />
    <ElliciumButton Click=@(args => OnClick("Medium button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Medium" />
    <ElliciumButton Click=@(args => OnClick("Small button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.Small" />
    <ElliciumButton Click=@(args => OnClick("Extra Small button with text and icon")) Text="Create" Icon="add" ButtonStyle="ButtonStyle.Primary" Size="ButtonSize.ExtraSmall" />
</ElliciumStack>

@code {
    private void OnClick(string text)
    {
        NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Info, Summary = "Button Clicked", Detail = text });
    }
}