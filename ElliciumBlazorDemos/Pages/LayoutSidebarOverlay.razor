<ElliciumLayout style="position: relative">
    <ElliciumHeader>
        <ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <ElliciumSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <ElliciumLabel Text="Header" />
        </ElliciumStack>
    </ElliciumHeader>
    <ElliciumSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="position: absolute">
        <ElliciumPanelMenu>
            <ElliciumPanelMenuItem Text="Home" Icon="home" />
            <ElliciumPanelMenuItem Text="Users" Icon="account_box" />
        </ElliciumPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </ElliciumSidebar>
    <ElliciumBody>
        <div class="rz-p-4">
            Body
        </div>
    </ElliciumBody>
    <ElliciumFooter>
        Footer
    </ElliciumFooter>
</ElliciumLayout>

@code {
    bool sidebarExpanded = false;
}