<ElliciumLayout>
    <ElliciumHeader>
        <ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <ElliciumSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
            <ElliciumLabel Text="Header" />
        </ElliciumStack>
    </ElliciumHeader>
    <ElliciumSidebar @bind-Expanded="@sidebar1Expanded">
        <ElliciumPanelMenu>
            <ElliciumPanelMenuItem Text="Home" Icon="home" />
            <ElliciumPanelMenuItem Text="Users" Icon="account_box" />
        </ElliciumPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </ElliciumSidebar>
    <ElliciumBody>
        <div class="rz-p-4">
            Body
        </div>
    </ElliciumBody>
    <ElliciumFooter>
        Footer
    </ElliciumFooter>
</ElliciumLayout>

@code {
    bool sidebar1Expanded = true;
}