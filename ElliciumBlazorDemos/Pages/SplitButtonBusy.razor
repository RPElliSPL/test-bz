<div class="container-fluid splitbutton-demo">
    <div class="row mb-4">
        <div class="col">
            <ElliciumText TextStyle="TextStyle.H6" TagName="TagName.H3">Set IsBusy</ElliciumText>
            <ElliciumSplitButton style="width: 160px" IsBusy=@busy Click=@OnBusyClick Text="Save">
                <ChildContent>
                    <ElliciumSplitButtonItem Text="Item1" Value="1" />
                    <ElliciumSplitButtonItem Text="Item2" Value="2" />
                </ChildContent>
            </ElliciumSplitButton>
            <ElliciumSplitButton Icon="save" BusyText="Saving ..." IsBusy=@busy Click=@OnBusyClick Text="Save">
                <ChildContent>
                    <ElliciumSplitButtonItem Text="Item1" Value="1" />
                    <ElliciumSplitButtonItem Text="Item2" Value="2" />
                </ChildContent>
            </ElliciumSplitButton>
        </div>
    </div>
</div>

@code {
    bool busy;

    async Task OnBusyClick()
    {
        busy = true;
        await Task.Delay(2000);
        busy = false;
    }
}
