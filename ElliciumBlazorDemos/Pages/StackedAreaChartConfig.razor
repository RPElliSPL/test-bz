            <ElliciumSeriesDataLabels Visible="@showDataLabels" />
        </ElliciumStackedAreaSeries>
        <ElliciumCategoryAxis Padding="20" />
        <ElliciumValueAxis Formatter="@FormatAsUSD" Min="0" Max="800000" Step="100000">
            <ElliciumGridLines Visible="true" />
            <ElliciumAxisTitle Text="Revenue in USD" />
        </ElliciumValueAxis>
    </ElliciumChart>
</div>

