@using System.Globalization

<div Class="rz-p-0 rz-p-md-12">
    <ElliciumStack Orientation="Orientation.Horizontal" Gap="0.5rem" AlignItems="AlignItems.Center" Class="rz-p-4 rz-mb-6 rz-border-radius-1" Style="border: var(--rz-grid-cell-border);">
        <ElliciumCheckBox @bind-Value="@smooth" Name="smooth"></ElliciumCheckBox>
        <ElliciumLabel Text="Smooth" Component="smooth" Class="rz-mr-6"/>
        <ElliciumCheckBox @bind-Value="@showDataLabels" Name="dataLabels"></ElliciumCheckBox>
        <ElliciumLabel Text="Show Data Labels" Component="dataLabels" />
    </ElliciumStack>
    <ElliciumChart>
        <ElliciumStackedAreaSeries Smooth="@smooth" Data="@revenue2023" CategoryProperty="Date" Title="2023" ValueProperty="Revenue">
            <ElliciumSeriesDataLabels Visible="@showDataLabels" />
        </ElliciumStackedAreaSeries>
