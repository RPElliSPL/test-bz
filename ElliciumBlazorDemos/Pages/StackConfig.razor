<ElliciumCard class="my-4">
    <ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Start" Wrap="FlexWrap.Wrap">
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            Orientation
            <ElliciumDropDown @bind-Value="@orientation" TextProperty="Text" ValueProperty="Value" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "orientation" }})"
                        Data="@(Enum.GetValues(typeof(Orientation)).Cast<Orientation>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </ElliciumStack>
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            AlignItems
            <ElliciumDropDown @bind-Value="@alignItems" TextProperty="Text" ValueProperty="Value" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "align items" }})"
                        Data="@(Enum.GetValues(typeof(AlignItems)).Cast<AlignItems>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </ElliciumStack>
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            JustifyContent
            <ElliciumDropDown @bind-Value="@justifyContent" TextProperty="Text" ValueProperty="Value" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "justify content" }})"
                        Data="@(Enum.GetValues(typeof(JustifyContent)).Cast<JustifyContent>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </ElliciumStack>
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            Wrap
            <ElliciumDropDown @bind-Value="@wrap" TextProperty="Text" ValueProperty="Value" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "wrap" }})"
                        Data="@(Enum.GetValues(typeof(FlexWrap)).Cast<FlexWrap>().Select(t => new { Text = $"{t}", Value = t }))" Size="ButtonSize.Small" />
        </ElliciumStack>
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            Gap
            <ElliciumTextBox @bind-Value="@gap" aria-label="gap" />
        </ElliciumStack>
        <ElliciumStack Orientation="Orientation.Vertical" Gap="4px">
            Reverse
            <ElliciumSwitch @bind-Value="@reverse" Style="margin-top: 4px;" InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "reverse" }})" />
        </ElliciumStack>
    </ElliciumStack>
</ElliciumCard>
<ElliciumCard class="p-0">
    <ElliciumStack Orientation="@orientation" Gap="@gap" Reverse="@reverse" JustifyContent="@justifyContent" AlignItems="@alignItems" Wrap="@wrap" Style="height: 400px">
        <ElliciumCard class="p-1 rz-background-color-info rz-color-on-info rz-text-align-center">
            A
        </ElliciumCard>
        <ElliciumCard class="p-1 rz-background-color-success rz-color-on-success rz-text-align-center" style="height: 40px; width: 40px;">
            B
        </ElliciumCard>
        <ElliciumCard class="p-1 rz-background-color-warning rz-color-on-warning rz-text-align-center" style="height: 60px; width: 60px;">
            C
        </ElliciumCard>
        <ElliciumCard class="p-1 rz-background-color-danger rz-color-on-danger rz-text-align-center" style="height: 80px; width: 80px;">
            D
        </ElliciumCard>
    </ElliciumStack>
</ElliciumCard>

@code {
    Orientation orientation = Orientation.Horizontal;
    AlignItems alignItems = AlignItems.Normal;
    JustifyContent justifyContent = JustifyContent.Normal;
    FlexWrap wrap = FlexWrap.NoWrap;
    string gap = "10px";
    bool reverse;
}
