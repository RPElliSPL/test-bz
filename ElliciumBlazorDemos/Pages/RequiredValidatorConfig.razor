@using Ellicium
@using System.Text.Json

<div class="container my-4">
    <div class="row">
        <div class="col">
            <ElliciumCard class="w-100 mb-4" >
            <ElliciumCheckBox @bind-Value=@popup Name="popup"></ElliciumCheckBox>
                <ElliciumLabel Text="Display validators as popup" Component="popup" Style="margin-left: 8px; vertical-align: middle;" />
            </ElliciumCard>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <ElliciumTemplateForm TItem="Model" Data=@model Submit=@OnSubmit InvalidSubmit=@OnInvalidSubmit>
                <ElliciumFieldset Text="Personal information">
                    <div class="row mb-5">
                        <div class="col-md-4">
                            <ElliciumLabel Text="First Name" Component="FirstName" />
                        </div>
                        <div class="col">
                            <ElliciumTextBox style="display: block" Name="FirstName" @bind-Value=@model.FirstName class="w-100" />
                            <ElliciumRequiredValidator Component="FirstName" Text="First name is required" Popup=@popup Style="position: absolute"/>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-4">
                            <ElliciumLabel Text="Last Name" Component="LastName" />
                        </div>
                        <div class="col">
                            <ElliciumTextBox style="display: block" Name="LastName" @bind-Value=@model.LastName  class="w-100" />
                            <ElliciumRequiredValidator Component="LastName" Text="Last name is required" Popup=@popup Style="position: absolute"/>
                        </div>
                    </div>
                    <ElliciumButton ButtonType="ButtonType.Submit" Text="Submit" ></ElliciumButton>
                </ElliciumFieldset>
            </ElliciumTemplateForm>
        </div>
    </div>
</div>

<EventConsole @ref=@console />

@code {
    class Model
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
    }

    bool popup;

    Model model = new Model();
    EventConsole console;

    void OnSubmit(Model model)
    {
        console.Log($"Submit: {JsonSerializer.Serialize(model, new JsonSerializerOptions() {  WriteIndented = true })}");
    }

    void OnInvalidSubmit(FormInvalidSubmitEventArgs args)
    {
        console.Log($"InvalidSubmit: {JsonSerializer.Serialize(args, new JsonSerializerOptions() {  WriteIndented = true })}");
    }
}