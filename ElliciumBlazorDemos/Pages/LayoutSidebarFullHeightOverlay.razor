<ElliciumLayout style="position: relative;grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <ElliciumHeader>
        <ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <ElliciumSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <ElliciumLabel Text="Header" />
        </ElliciumStack>
    </ElliciumHeader>
    <ElliciumSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="position: absolute; z-index: 3">
        <ElliciumStack AlignItems="AlignItems.End" Class="rz-p-2">
            <ElliciumButton Icon="west" Variant="Variant.Text" ButtonStyle="ButtonStyle.Secondary" Click="@(() => sidebarExpanded = false)" />
        </ElliciumStack>
        <ElliciumPanelMenu>
            <ElliciumPanelMenuItem Text="Home" Icon="home" />
            <ElliciumPanelMenuItem Text="Users" Icon="account_box" />
        </ElliciumPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </ElliciumSidebar>
    <ElliciumBody>
        <div class="rz-p-4">
            Body
        </div>
    </ElliciumBody>
    @if (sidebarExpanded)
    {
    <div @onclick="@(() => sidebarExpanded = false)" class="rz-dialog-mask" style="position: absolute; z-index: 2"></div>
    }
</ElliciumLayout>

@code {
    bool sidebarExpanded = false;
}