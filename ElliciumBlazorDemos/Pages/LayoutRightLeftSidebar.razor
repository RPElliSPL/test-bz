<ElliciumLayout Style="grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
    <ElliciumHeader>
        <ElliciumStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <ElliciumSidebarToggle Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)" />
            <ElliciumLabel Text="Header" />
        </ElliciumStack>
    </ElliciumHeader>
    <ElliciumSidebar @bind-Expanded="@leftSidebarExpanded">
        <ElliciumPanelMenu>
            <ElliciumPanelMenuItem Text="Home" Icon="home" />
            <ElliciumPanelMenuItem Text="Users" Icon="account_box" />
        </ElliciumPanelMenu>
        <div class="rz-p-4">
            Left Sidebar
        </div>
    </ElliciumSidebar>
    <ElliciumBody>
        <div class="rz-p-4">
            Body
        </div>
        <div class="rz-p-4">
            <ElliciumButton Text="Toggle left Sidebar" Click="@(() => leftSidebarExpanded = !leftSidebarExpanded)" />
            <ElliciumButton Text="Toggle right Sidebar" Click="@(() => rightSidebarExpanded = !rightSidebarExpanded)" />
        </div>
    </ElliciumBody>
    <ElliciumSidebar @bind-Expanded="@rightSidebarExpanded" Style="width: 300px; grid-area: rz-right-sidebar">
        <div class="rz-p-4">
            Right Sidebar
        </div>
    </ElliciumSidebar>
</ElliciumLayout>

@code {
    bool leftSidebarExpanded = true;
    bool rightSidebarExpanded = true;
}