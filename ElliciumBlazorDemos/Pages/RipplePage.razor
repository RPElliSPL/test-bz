@page "/ripple"

<ElliciumText TextStyle="TextStyle.H2" TagName="TagName.H1" class="rz-pt-8">
    Ripple
</ElliciumText>
<ElliciumText TextStyle="TextStyle.Subtitle1" TagName="TagName.P" class="rz-pb-4">
     Apply the ripple effect to various UI elements.
</ElliciumText>

<ElliciumText Anchor="ripple#ripple-button" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-8">
    Ripple ElliciumButton
</ElliciumText>
<ElliciumText TextStyle="TextStyle.Body1" class="rz-mb-8">
    Ripple effect applied to ElliciumButton via <code>class="rz-ripple"</code>. Material theme buttons have the ripple effect applied by default.
</ElliciumText>
<ElliciumExample Example="RippleButton">
    <RippleButton />
</ElliciumExample>

<ElliciumText Anchor="ripple#ripple-link" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-12">
    Ripple ElliciumLink
</ElliciumText>
<ElliciumText TextStyle="TextStyle.Body1" class="rz-mb-8">
    Ripple effect applied to ElliciumLink via <code>class="rz-ripple"</code>.
</ElliciumText>
<ElliciumExample Example="RippleLink">
    <RippleLink />
</ElliciumExample>

<ElliciumText Anchor="ripple#ripple-div" TextStyle="TextStyle.H5" TagName="TagName.H2" class="rz-pt-12">
    Ripple HTML div
</ElliciumText>
<ElliciumText TextStyle="TextStyle.Body1" class="rz-mb-8">
    Ripple effect applied to a simple <code>&lt;div&gt;</code> element via <code>class="rz-ripple"</code>. The ripple color inherits the element's text color.
</ElliciumText>
<ElliciumExample Example="RippleDiv">
    <RippleDiv />
</ElliciumExample>
